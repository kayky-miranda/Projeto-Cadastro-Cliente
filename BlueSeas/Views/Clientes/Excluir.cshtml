@*

*@
@{
    ViewData["title"] = "Excluir Cliente";
}

@model BlueSeas.Models.CadastrosModel
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestão de Clientes - ACME</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        /* Cabeçalho */
        header {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #cfe6f8;
            padding: 10px;
            font-weight: bold;
            font-size: 18px;
        }

            header img {
                height: 25px;
                margin-right: 10px;
            }

        /* Layout principal */
        .layout {
            display: flex;
            height: calc(100vh - 50px);
        }

        /* Menu lateral */
        .sidebar {
            width: 60px;
            background-color: #2c4a60;
            padding: 15px 5px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

            .sidebar img {
                width: 30px;
                cursor: pointer;
            }

        /* Conteúdo */
        .content {
            flex: 1;
            padding: 20px;
        }

        h2 {
            margin-top: 0;
        }

        /* Barra de pesquisa */
        .search {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
        }

            .search input {
                padding: 6px;
                border: 1px solid #ccc;
                border-radius: 4px 0 0 4px;
            }

            .search button {
                padding: 6px 10px;
                border: 1px solid #ccc;
                border-left: none;
                background-color: white;
                cursor: pointer;
                border-radius: 0 4px 4px 0;
            }

        /* Tabela */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border-radius: 6px;
            overflow: hidden;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f3f3f3;
        }

        tr:hover {
            background-color: #f9f9f9;
        }

        .actions button {
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .actions .edit {
            background-color: #4caf50;
            color: white;
        }

        .actions .delete {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h2 class="mb-4">Tem certeza que deseja excluir o registro abaixo?</h2>


    <form method="post" asp-action="Excluir" asp-controller="Clientes">
        <input type="hidden" asp-for=Id />
        <h2 class ="text-light"></h2>

        <!-- Dados da Empresa -->
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-2">Dados da Empresa</legend>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="RazaoSocial" class="form-label">Razão Social</label>
                    <input type="text" class="form-control" asp-for="RazaoSocial" disabled/>
                </div>
                <div class="col-md-6">
                    <label for="NomeFantasia" class="form-label">Nome Fantasia</label>
                    <input type="text" class="form-control" asp-for="NomeFantasia" disabled />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="CNPJ" class="form-label">CNPJ</label>
                    <input type="text" class="form-control" asp-for="CNPJ" disabled />
                </div>
                <div class="col-md-4">
                    <label for="InscricaoEstadual" class="form-label">Inscrição Estadual</label>
                    <input type="text" class="form-control" asp-for="InscricaoEstadual" disabled />
                </div>
                <div class="col-md-4">
                    <label for="InscricaoSocial" class="form-label">Inscrição Social</label>
                    <input type="text" class="form-control" asp-for="InscricaoSocial" disabled />
                </div>
            </div>

            <div class="mb-3">
                <label for="InscricaoMunicipal" class="form-label">Inscrição Municipal</label>
                <input type="text" class="form-control" asp-for="InscricaoMunicipal" disabled />
            </div>
        </fieldset>

        <!-- Endereço -->
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-2">Endereço</legend>

            <div class="row mb-3">
                <div class="col-md-8">
                    <label for="Logradouro" class="form-label">Logradouro</label>
                    <input type="text" class="form-control" asp-for="Logradouro" disabled />
                </div>
                <div class="col-md-4">
                    <label for="Numero" class="form-label">Número</label>
                    <input type="text" class="form-control" asp-for="Numero" disabled />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="Complemento" class="form-label">Complemento</label>
                    <input type="text" class="form-control" asp-for="Complemento" disabled />
                </div>
                <div class="col-md-6">
                    <label for="Bairro" class="form-label">Bairro</label>
                    <input type="text" class="form-control" asp-for="Bairro" disabled />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2">
                    <label for="uf" class="form-label">UF</label>
                    <select class="form-select" id="UF" name="UF" disabled>
                        <option value="">Selecione</option >
                        <option value="SP">SP</option>
                        <option value="RJ">RJ</option>
                        <option value="MG">MG</option>
                        <!-- Adicione outros estados -->
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="CEP" class="form-label">CEP</label>
                    <input type="text" class="form-control" asp-for="CEP" disabled />
                </div>
            </div>
        </fieldset>

        <!-- Contato -->
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-2">Contato</legend>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="Telefone" class="form-label">Telefone(s)</label>
                    <input type="text" class="form-control" asp-for="Telefone" disabled />
                </div>
                <div class="col-md-4">
                    <label for="Celular" class="form-label">Celular</label>
                    <input type="text" class="form-control" asp-for="Celular" disabled />
                </div>
                <div class="col-md-4">
                    <label for="WhatsApp" class="form-label">WhatsApp</label>
                    <input type="text" class="form-control" asp-for="WhatsApp" disabled />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="Email" class="form-label">E-mail</label>
                    <input type="text" class="form-control" asp-for="Email" disabled />
                </div>
                <div class="col-md-6">
                    <label for="url" class="form-label">URL</label>
                    <input type="text" class="form-control" asp-for="URL" disabled />
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <a href="/Clientes/Index" class="btn btn-primary me-2">Cancelar</a>
                <button type="submit" class="btn btn-danger">Excluir Cliente</button>
            </div>
        </fieldset>

        <!-- Botões -->

    </form>

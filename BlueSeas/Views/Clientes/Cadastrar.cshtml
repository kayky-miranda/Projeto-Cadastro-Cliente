
@{
    ViewData["title"] = "Cadastrar Cliente";
}

@model BlueSeas.Models.CadastrosModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestão de Clientes - ACME</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        /* Cabeçalho */


        /* Layout principal */
        .layout {
            display: flex;
            height: calc(100vh - 50px);
        }

        /* Menu lateral */
        .sidebar {
            width: 60px;
            background-color: #2c4a60;
            padding: 15px 5px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

            .sidebar img {
                width: 30px;
                cursor: pointer;
            }

        /* Conteúdo */
        .content {
            flex: 1;
            padding: 20px;
        }

        h2 {
            margin-top: 0;
        }

        /* Barra de pesquisa */
        .search {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 10px;
        }

            .search input {
                padding: 6px;
                border: 1px solid #ccc;
                border-radius: 4px 0 0 4px;
            }

            .search button {
                padding: 6px 10px;
                border: 1px solid #ccc;
                border-left: none;
                background-color: white;
                cursor: pointer;
                border-radius: 0 4px 4px 0;
            }

        /* Tabela */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border-radius: 6px;
            overflow: hidden;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f3f3f3;
        }

        tr:hover {
            background-color: #f9f9f9;
        }

        .actions button {
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .actions .edit {
            background-color: #4caf50;
            color: white;
        }

        .actions .delete {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h2 class="mb-4">Cadastro de Cliente</h2>


    <form method="post" asp-action="Cadastrar" asp-controller="Clientes">
        <!-- Dados da Empresa -->
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-2">Dados da Empresa</legend>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="razaoSocial" class="form-label">Razão Social</label>
                    <input type="text" class="form-control" asp-validation-for="RazaoSocial" id="RazaoSocial" name="RazaoSocial" />
                    <span class="text-danger" asp-validation-for="RazaoSocial"></span>
                </div>
                <div class="col-md-6">
                    <label for="nomeFantasia" class="form-label">Nome Fantasia</label>
                    <input type="text" class="form-control" asp-validation-for="NomeFantasia" id="NomeFantasia" name="NomeFantasia" />
                    <span class="text-danger" asp-validation-for="NomeFantasia"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="cnpj" class="form-label">CNPJ</label>
                    <input type="text" class="form-control" asp-validation-for="CNPJ" id="CNPJ" name="CNPJ" />
                    <span class="text-danger" asp-validation-for="CNPJ"></span>
                </div>
                <div class="col-md-4">
                    <label for="inscricaoEstadual" class="form-label">Inscrição Estadual</label>
                    <input type="text" class="form-control" asp-validation-for="InscricaoEstadual" id="InscricaoEstadual" name="InscricaoEstadual" />
                </div>
                <div class="col-md-4">
                    <label for="inscricaoSocial" class="form-label">Inscrição Social</label>
                    <input type="text" class="form-control" asp-validation-for="InscricaoSocial" id="InscricaoSocial" name="InscricaoSocial" />
                </div>
            </div>

            <div class="mb-3">
                <label for="inscricaoMunicipal" class="form-label">Inscrição Municipal</label>
                <input type="text" class="form-control" asp-validation-for="InscricaoMunicipal" id="InscricaoMunicipal" name="InscricaoMunicipal" />
            </div>
        </fieldset>

        <!-- Endereço -->
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-2">Endereço</legend>

            <div class="row mb-3">
                <div class="col-md-8">
                    <label for="logradouro" class="form-label">Logradouro</label>
                    <input type="text" class="form-control" asp-validation-for="Logradouro" id="Logradouro" name="Logradouro" />
                    <span class="text-danger" asp-validation-for="Logradouro"></span>
                </div>
                <div class="col-md-4">
                    <label for="numero" class="form-label">Número</label>
                    <input type="text" class="form-control" asp-validation-for="Numero" id="Numero" name="Numero" />
                    <span class="text-danger" asp-validation-for="Numero"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="complemento" class="form-label">Complemento</label>
                    <input type="text" class="form-control" asp-validation-for="Complemento" id="Complemento" name="Complemento" />
                </div>
                <div class="col-md-6">
                    <label for="bairro" class="form-label">Bairro</label>
                    <input type="text" class="form-control" asp-validation-for="Bairro" id="Bairro" name="Bairro" />
                    <span class="text-danger" asp-validation-for="Bairro"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-2">
                    <label for="uf" class="form-label">UF</label>
                    <select class="form-select" id="UF" name="UF">
                        <span class="text-danger" asp-validation-for="UF"></span>
                        <option value="">Selecione</option>
                        <option value="SP">SP</option>
                        <option value="RJ">RJ</option>
                        <option value="MG">MG</option>
                        <!-- Adicione outros estados -->
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="cep" class="form-label">CEP</label>
                    <input type="text" class="form-control" asp-validation-for="CEP" id="CEP" name="CEP" />
                    <span class="text-danger" asp-validation-for="CEP"></span>
                </div>
            </div>
        </fieldset>

        <!-- Contato -->
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-2">Contato</legend>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="telefone" class="form-label">Telefone(s)</label>
                    <input type="text" class="form-control" asp-validation-for="Telefone" id="Telefone" name="Telefone" />
                    <span class="text-danger" asp-validation-for="Telefone"></span>
                </div>
                <div class="col-md-4">
                    <label for="celular" class="form-label">Celular</label>
                    <input type="text" class="form-control" asp-validation-for="Celular" id="Celular" name="Celular" />
                </div>
                <div class="col-md-4">
                    <label for="whatsapp" class="form-label">WhatsApp</label>
                    <input type="checkbox" class="checkbox" asp-validation-for="WhatsApp" id="WhatsApp" name="WhatsApp" />
                    <span class="text-danger" asp-validation-for="WhatsApp"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" asp-validation-for="Email" id="Email" name="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-md-6">
                    <label for="url" class="form-label">URL</label>
                    <input type="url" class="form-control" asp-validation-for="URL" id="URL" name="URL" />
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <a href="/Clientes/Index" class="btn btn-primary me-2">Cancelar</a>
                <button type="submit" class="btn btn-success">  Salvar Cliente</button>
            </div>
        </fieldset>

        <!-- Botões -->

    </form>
